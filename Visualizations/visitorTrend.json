{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Domestic Visitors (million)"},
  "width": "container",
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/Li3406/3179/main/Data/Extracted%20Data/visitorTrend.csv"
  },
  "transform": [
    {
      "calculate": "datum['visitor_num_thousands'] / 1000",
      "as": "visitor_num_millions"
    }
  ],
  "encoding": {},
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {"field": "year", "type": "nominal", "title": null},
        "y": {
          "field": "visitor_num_millions",
          "type": "quantitative",
          "axis": {"title": null, "titleColor": "blue"},
          "scale": {"domain": [0, 300]}
        }
      }
    },
    {
      "mark": "circle",
      "encoding": {
        "x": {"field": "year", "type": "nominal", "title": null},
        "y": {"field": "visitor_num_millions", "type": "quantitative"},
        "tooltip": [
          {"field": "year", "type": "nominal", "title": "Year:"},
          {
            "field": "visitor_num_thousands",
            "type": "quantitative",
            "title": "Number of visitors ('000):",
            "format": ",.0f"
          }
        ]
      }
    }
  ]
}