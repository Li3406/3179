{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/Li3406/3179/main/Data/Extracted%20Data/expenditure.csv"
  },

  "mark": {
    "type": "text",
    "align": "center",
    "baseline": "middle",
    "fontSize": 25
  },
  "encoding": {
    "x": {
      "field": "icon_pos",
      "type": "quantitative",
      "axis": null,
      "stack": null
    },
    "y": {
      "field": "visitor_expenditure",
      "type": "nominal",
      "axis": { "title": null, "domain": false },
      "sort": [
        "Shopping",
        "Accommodation",
        "Food & beverage",
        "Transport",
        "Purchase of automotive fuel ",
        "Expenditure before the trip/ package/ entrance fees/ tickets",
        "Other activities"
      ]
    },
    "text": {
      "condition": [
        { "test": "datum.visitor_expenditure === 'Shopping'", "value": "🛒" },
        {
          "test": "datum.visitor_expenditure === 'Accommodation'",
          "value": "🏠"
        },
        {
          "test": "datum.visitor_expenditure === 'Food & beverage'",
          "value": "🍽️"
        },
        { "test": "datum.visitor_expenditure === 'Transport'", "value": "🚗" },
        {
          "test": "datum.visitor_expenditure === 'Purchase of automotive fuel '",
          "value": "⛽"
        },
        {
          "test": "datum.visitor_expenditure === 'Expenditure before the trip/ package/ entrance fees/ tickets'",
          "value": "🎫"
        }
      ],
      "value": "⚫"
    },
    "tooltip": [
      {
        "field": "visitor_expenditure",
        "type": "nominal",
        "title": "Category"
      },
      {
        "field": "expenditure_2022",
        "type": "quantitative",
        "title": "Expenditure 2022 ('000)"
      },
      {
        "field": "expenditure_2023",
        "type": "quantitative",
        "title": "Expenditure 2023 ('000)"
      }
    ]
  },
  "config": {
    "view": {
      "stroke": null
    }
  }
}
