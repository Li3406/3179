{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Domestic Visitors (million)" },
  "width": 500,
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/Li3406/3179/main/Data/Extracted%20Data/travelPurpose.csv"
  },
  "mark": { "type": "arc", "innerRadius": 50 },
  "encoding": {
    "theta": { "field": "percentage", "type": "quantitative" },
    "color": {
      "field": "purpose",
      "type": "nominal",
      "scale": { "scheme": "paired" }
    },
    "order": {
      "field": "percentage",
      "type": "quantitative",
      "sort": "ascending"
    },
    "tooltip": [
      { "field": "purpose", "type": "nominal", "title": "Purpose:" },
      { "field": "percentage", "type": "quantitative", "title": "Percentage" }
    ]
  }
}
