{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 650,
  "height": 250,
  "projection": { "type": "mercator" },
  "data": {
    "url": "https://raw.githubusercontent.com/Li3406/3179/main/Data/Extracted%20Data/malaysiaStates.json",
    "format": { "type": "topojson", "feature": "MYSADM1gbOpen" }
  },
  "params": [
    {
      "name": "year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2016,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "encoding": {
    "tooltip": [
      { "field": "properties.shapeName", "type": "nominal", "title": "State" },
      { "field": "year", "type": "quantitative", "title": "Year" },
      {
        "field": "visitor_num_millions",
        "type": "quantitative",
        "title": "Visitors (million)",
        "format": ",.1f"
      },
      {
        "field": "percentage_total",
        "type": "quantitative",
        "title": "Percent of Total Visitors (%)"
      }
    ]
  },
  "layer": [
    { "mark": { "type": "geoshape", "fill": "gainsboro", "stroke": "white" } },
    {
      "transform": [
        {
          "lookup": "properties.shapeName",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Li3406/3179/main/Data/Extracted%20Data/visitorByState.csv"
            },
            "key": "state",
            "fields": ["year", "percentage_total", "visitor_num_thousands"]
          }
        },
        {
          "calculate": "datum['visitor_num_thousands'] / 1000",
          "as": "visitor_num_millions"
        },
        { "filter": "datum.year == year_selection" }
      ],
      "mark": { "type": "geoshape", "stroke": "black", "strokeWidth": 1.2 },
      "encoding": {
        "color": {
          "field": "percentage_total",
          "scale": {
            "type": "quantile",
            "scheme": { "name": "blues", "count": 10 }
          },
          "legend": { "title": ["Percentage of", "visitors"] }
        }
      }
    }
  ],
  "config": { "view": { "stroke": null } }
}
