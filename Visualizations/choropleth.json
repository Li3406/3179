{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Visitor Distribution Across States",
  "width": 650,
  "height": 450,
  "projection": {"type": "mercator"},
  "data": {
    "url": "https://raw.githubusercontent.com/Li3406/3179/main/Data/Extracted%20Data/malaysiaStates.json",
    "format": {"type": "topojson", "feature": "MYSADM1gbOpen"}
  },
  "encoding": {
    "tooltip": [
      {"field": "properties.shapeName", "type": "nominal", "title": "State:"},
      {
        "field": "visitor_num_thousands",
        "type": "quantitative",
        "title": "Number of visitors ('000):",
        "format": ",.0f"
      },
      {
        "field": "percentage_total",
        "type": "quantitative",
        "title": "Percent of visitors:"
      }
    ]
  },
  "layer": [
    {"mark": {"type": "geoshape", "fill": "gainsboro", "stroke": "white"}},
    {
      "transform": [
        {
          "lookup": "properties.shapeName",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Li3406/3179/main/Data/Extracted%20Data/visitorByState2023.csv"
            },
            "key": "state",
            "fields": ["percentage_total", "visitor_num_thousands"]
          }
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "percentage_total",
          "scale": {
            "type": "quantile",
            "scheme": {"name": "greenblue", "count": 8}
          },
          "legend": {"title": "Percent of visitors"}
        }
      }
    }
  ]
}